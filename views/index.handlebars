
<div class="row">

  <div class="col-sm-6">
    <h3> Burgers Added </h3>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            {{this.burger_name}} <button type="submit" class='burgerAvailable'> Devour </button>
          </form>
        </div>
      {{/unless}}
    {{/each}}
  </div>

  <div class="col-sm-6">
    <h3> Burgers Devoured </h3>
    {{#each burgers}}
      {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>

</div>


<h2>Add A New Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurgerButton"> Add Burger </button>
    </form>
  </div>
</div>
